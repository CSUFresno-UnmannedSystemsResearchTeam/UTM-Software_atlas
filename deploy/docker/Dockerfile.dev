FROM ubuntu:22.04

# Install dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    ninja-build \
    qt6-base-dev \
    qt6-tools-dev \
    libprotobuf-dev \
    protobuf-compiler \
    libgrpc++-dev \
    protobuf-compiler-grpc \
    libpq-dev \
    libhiredis-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

CMD ["./atlas", "dev"]
