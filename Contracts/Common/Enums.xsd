<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://atlas.com/schemas/enums/v1.0"
           xmlns:tns="http://atlas.com/schemas/enums/v1.0"
           elementFormDefault="qualified">

    <!-- Communication Protocol Types -->
    <xs:simpleType name="ProtocolTypeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="mavlink2"/>
            <xs:enumeration value="mavlink1"/>
            <xs:enumeration value="rtp"/>
            <xs:enumeration value="rtsp"/>
            <xs:enumeration value="http"/>
            <xs:enumeration value="websocket"/>
            <xs:enumeration value="tcp"/>
            <xs:enumeration value="udp"/>
            <xs:enumeration value="custom"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Data Stream Types -->
    <xs:simpleType name="StreamTypeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="control"/>
            <xs:enumeration value="telemetry"/>
            <xs:enumeration value="video"/>
            <xs:enumeration value="audio"/>
            <xs:enumeration value="sensor_data"/>
            <xs:enumeration value="file_transfer"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Video Format Types -->
    <xs:simpleType name="VideoFormatEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="h264"/>
            <xs:enumeration value="h265"/>
            <xs:enumeration value="vp8"/>
            <xs:enumeration value="vp9"/>
            <xs:enumeration value="mjpeg"/>
            <xs:enumeration value="raw"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Camera Types -->
    <xs:simpleType name="CameraTypeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="rgb"/>
            <xs:enumeration value="thermal"/>
            <xs:enumeration value="multispectral"/>
            <xs:enumeration value="hyperspectral"/>
            <xs:enumeration value="lidar"/>
            <xs:enumeration value="infrared"/>
            <xs:enumeration value="night_vision"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Sensor Types -->
    <xs:simpleType name="SensorTypeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="camera"/>
            <xs:enumeration value="thermal"/>
            <xs:enumeration value="lidar"/>
            <xs:enumeration value="radar"/>
            <xs:enumeration value="ultrasonic"/>
            <xs:enumeration value="imu"/>
            <xs:enumeration value="gps"/>
            <xs:enumeration value="magnetometer"/>
            <xs:enumeration value="barometer"/>
            <xs:enumeration value="air_quality"/>
            <xs:enumeration value="weather"/>
            <xs:enumeration value="radiation"/>
            <xs:enumeration value="chemical"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Flight Modes -->
    <xs:simpleType name="FlightModeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="manual"/>
            <xs:enumeration value="stabilized"/>
            <xs:enumeration value="altitude_hold"/>
            <xs:enumeration value="position_hold"/>
            <xs:enumeration value="guided"/>
            <xs:enumeration value="autonomous"/>
            <xs:enumeration value="return_to_home"/>
            <xs:enumeration value="land"/>
            <xs:enumeration value="takeoff"/>
            <xs:enumeration value="loiter"/>
            <xs:enumeration value="circle"/>
            <xs:enumeration value="follow_me"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Payload Types -->
    <xs:simpleType name="PayloadTypeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="camera"/>
            <xs:enumeration value="sensor_package"/>
            <xs:enumeration value="delivery_box"/>
            <xs:enumeration value="searchlight"/>
            <xs:enumeration value="speaker"/>
            <xs:enumeration value="radio_relay"/>
            <xs:enumeration value="manipulator_arm"/>
            <xs:enumeration value="sprayer"/>
            <xs:enumeration value="winch"/>
            <xs:enumeration value="custom"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Emergency Actions -->
    <xs:simpleType name="EmergencyActionEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="hover"/>
            <xs:enumeration value="returnToHome"/>
            <xs:enumeration value="landImmediately"/>
            <xs:enumeration value="continueMission"/>
            <xs:enumeration value="emergencyAscent"/>
            <xs:enumeration value="emergencyDescent"/>
            <xs:enumeration value="deployParachute"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Mission Pattern Types -->
    <xs:simpleType name="MissionPatternEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="waypoint"/>
            <xs:enumeration value="grid_search"/>
            <xs:enumeration value="spiral_search"/>
            <xs:enumeration value="perimeter_patrol"/>
            <xs:enumeration value="figure_eight"/>
            <xs:enumeration value="orbit"/>
            <xs:enumeration value="survey"/>
            <xs:enumeration value="inspection"/>
            <xs:enumeration value="follow_target"/>
            <xs:enumeration value="formation_flight"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Control Interface Types -->
    <xs:simpleType name="ControlInterfaceEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="pwm"/>
            <xs:enumeration value="serial"/>
            <xs:enumeration value="i2c"/>
            <xs:enumeration value="spi"/>
            <xs:enumeration value="can_bus"/>
            <xs:enumeration value="ethernet"/>
            <xs:enumeration value="usb"/>
            <xs:enumeration value="gpio"/>
            <xs:enumeration value="analog"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Navigation System Types -->
    <xs:simpleType name="NavigationSystemEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="gps"/>
            <xs:enumeration value="glonass"/>
            <xs:enumeration value="galileo"/>
            <xs:enumeration value="beidou"/>
            <xs:enumeration value="sbas"/>
            <xs:enumeration value="rtk"/>
            <xs:enumeration value="visual_odometry"/>
            <xs:enumeration value="slam"/>
            <xs:enumeration value="optical_flow"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Radio Modulation Types -->
    <xs:simpleType name="ModulationTypeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="bpsk"/>
            <xs:enumeration value="qpsk"/>
            <xs:enumeration value="qam16"/>
            <xs:enumeration value="qam64"/>
            <xs:enumeration value="qam256"/>
            <xs:enumeration value="ofdm"/>
            <xs:enumeration value="fhss"/>
            <xs:enumeration value="dsss"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Security Methods -->
    <xs:simpleType name="SecurityMethodEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="none"/>
            <xs:enumeration value="wep"/>
            <xs:enumeration value="wpa2"/>
            <xs:enumeration value="wpa3"/>
            <xs:enumeration value="aes128"/>
            <xs:enumeration value="aes256"/>
            <xs:enumeration value="tls"/>
            <xs:enumeration value="dtls"/>
            <xs:enumeration value="custom"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Quality of Service Levels -->
    <xs:simpleType name="QoSLevelEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="best_effort"/>
            <xs:enumeration value="background"/>
            <xs:enumeration value="excellent_effort"/>
            <xs:enumeration value="critical_applications"/>
            <xs:enumeration value="video"/>
            <xs:enumeration value="voice"/>
            <xs:enumeration value="internetwork_control"/>
            <xs:enumeration value="network_control"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Drone Classification Types -->
    <xs:simpleType name="DroneClassEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="micro"/>      <!-- < 250g -->
            <xs:enumeration value="mini"/>       <!-- 250g - 2kg -->
            <xs:enumeration value="small"/>      <!-- 2kg - 25kg -->
            <xs:enumeration value="medium"/>     <!-- 25kg - 150kg -->
            <xs:enumeration value="large"/>      <!-- > 150kg -->
        </xs:restriction>
    </xs:simpleType>

    <!-- Weather Conditions -->
    <xs:simpleType name="WeatherConditionEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="clear"/>
            <xs:enumeration value="partly_cloudy"/>
            <xs:enumeration value="overcast"/>
            <xs:enumeration value="light_rain"/>
            <xs:enumeration value="heavy_rain"/>
            <xs:enumeration value="snow"/>
            <xs:enumeration value="fog"/>
            <xs:enumeration value="high_wind"/>
            <xs:enumeration value="storm"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Regulatory Zones -->
    <xs:simpleType name="RegulatoryZoneEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="unrestricted"/>
            <xs:enumeration value="controlled_airspace"/>
            <xs:enumeration value="restricted"/>
            <xs:enumeration value="prohibited"/>
            <xs:enumeration value="military"/>
            <xs:enumeration value="emergency"/>
            <xs:enumeration value="temporary_restriction"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Plugin Types -->
    <xs:simpleType name="PluginTypeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="mission_planner"/>
            <xs:enumeration value="payload_controller"/>
            <xs:enumeration value="data_processor"/>
            <xs:enumeration value="communication_handler"/>
            <xs:enumeration value="security_module"/>
            <xs:enumeration value="ui_extension"/>
            <xs:enumeration value="analysis_tool"/>
            <xs:enumeration value="custom"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>
